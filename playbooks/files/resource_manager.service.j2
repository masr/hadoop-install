[Unit]
Description=Hadoop ResourceManager
After=network.target

[Service]
WorkingDirectory={{ install_base_dir }}/hadoop
Environment=HADOOP_HOME={{ install_base_dir }}/hadoop HADOOP_CONF_DIR={{ install_base_dir }}/confs/hadoop/conf
Environment=YARN_LOGFILE=hadoop-yarn-resource_manager-%H.log YARN_ROOT_LOGGER=INFO,RFA
ExecStart={{install_base_dir}}/hadoop/bin/yarn --config {{ install_base_dir }}/confs/hadoop/conf resourcemanager
#ExecStop=
Type=simple
Restart=always
RestartSec=10s
User=yarn
OOMScoreAdjust=-1000
LimitNOFILE=infinity
LimitNPROC=infinity


[Install]
WantedBy=multi-user.target