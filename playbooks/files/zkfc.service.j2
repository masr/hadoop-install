[Unit]
Description=Hadoop zkfc
After=network.target

[Service]
WorkingDirectory={{ install_base_dir }}/hadoop
Environment=HADOOP_ROOT_LOGGER=INFO,RFA HADOOP_LOGFILE=hadoop-hdfs-zkfc-%H.log
ExecStart=/bin/sh -c '{{ install_base_dir }}/hadoop/bin/hdfs --config {{ hadoop_confs_dir }}/hadoop/conf zkfc >> {{ hadoop_log_dir }}/hdfs/zkfc.out 2>&1'
#ExecStop=
Type=simple
Restart=always
RestartSec=10s
User=hdfs
OOMScoreAdjust=-1000
LimitNOFILE=infinity
LimitNPROC=infinity


[Install]
WantedBy=multi-user.target